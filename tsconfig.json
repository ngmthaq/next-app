{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "next.config": ["./next.config.mjs"]
    }
  },
  "include": ["next-env.d.ts", "eslint.config.mjs", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
